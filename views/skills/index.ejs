<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Skills</h1>
     <ul>
        <% skills.forEach(function(s) { %>
        <li>
            <form action="/skills/<%= s.id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit">X</button>
            </form>
            <a href="/skills/<%= s.id %>"><%= s.name %></a>
        </li>
        <% }); %>
    </ul>
    <a href="/skills/new">Add skill</a>

</body>
</html>